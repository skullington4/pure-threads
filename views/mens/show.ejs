<%- include('../partials/header') %>

<table id="list">
    <thead>
      <tr>
        <th></th>
        <th>Title:</th>
        <th>Price:</th>
        <th>Description:</th>
        <th>Size:</th>
        <th>Color:</th>
        <th>Brand:</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td class="cartPicture"><img src="<%= item.imageOne %>"></td>
          <td ><%= item.title %></td>
          <td>$<%= item.price %></td>
          <td><%= item.description %></td>
          <td><%= item.size %></td>
          <td><%= item.color %></td>
          <td><%= item.brand %></td>
        </tr>
    </tbody>
</table>

<% if (user) { %>
  <form action="/mens/<%= item._id %>/cart" method="POST">
    <button type="submit">Add to Cart</button>
  </form>
<% } %>

<br><br><h2>Reviews</h2>
<% if (user) { %>
  <form id="add-review-form" method="POST"
    action="/mens/<%= item._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <label>Rating:</label>
    <select name="rating">
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5" selected>5</option>
    </select>
    <input type="submit" value="Add Review">
  </form>
<% } %>
<% if (item.reviews.length) { %>
  <table>
    <thead>
      <tr>
        <th>User</th>
        <th>Date</th>
        <th>Review</th>
        <th>Rating</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% let total = 0 %>
      <% item.reviews.forEach(function(i) { %>
        <% total += i.rating %>
        <tr>
          <td class="review-user"><img alt="avatar" src="<%= i.userAvatar %>" referrerpolicy="no-referrer" ><%= i.userName %></td>
          <td><%= i.createdAt.toLocaleDateString() %></td>
          <td><%= i.content %></td>
          <td><%= i.rating %></td>
          <td>
            <% if (user?._id.equals(i.user)) { %>
              <form action="/mens/reviews/<%= i._id %>?_method=DELETE" method="POST">
                <button type="submit">X</button>
              </form>
            <% } %>
          </td>
        </tr>
      <% }); %>
      <tr>
        <td colspan="3"></td>
        <td>
          <strong>
            <%= (total / item.reviews.length).toFixed(1) %>
          </strong>
        </td>
      </tr>
    </tbody>
  </table>
<% } else { %>
  <h5>No Reviews Yet</h5>
<% } %>


<%- include('../partials/footer') %>